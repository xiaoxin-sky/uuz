import uuz from "uuz/jsx-runtime";
import { Arc, Rect } from "uuz/uuz.umd.js";
import kLineData from "./data";

export default () => {
  return (
    <>
      {kLineData.map((kLine) => {
        return (
          <Rect
            core={kLine.core}
            style={kLine.style}
            events={{
              mouseenter(geometry) {
                this.mk = kLine.style.background || "black";
                kLine.style.background = "#ffff00";
              },
              mouseleave(geometry) {
                kLine.style.background = this.mk;
                this.mk = null;
              },
            }}
          />
        );
      })}
      <Arc
        core={{
          x: 100,
          y: 75,
          radius: 30,
        }}
        style={{
          opacity: 0.6,
          boxShadow: "red 2 3 3",
          background: "#79B83D",
        }}
        events={{
          click(geometry) {
            if (geometry.bg) {
              geometry.style.background = geometry.bg;
              geometry.core.x -= 100;
              geometry.bg = null;
            } else {
              geometry.bg = geometry.style.background;
              geometry.core.x += 100;
              geometry.style.background = "#ffff00";
            }
          },
        }}
      />
    </>
  );
};
